{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Modification d'un post</h1>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn-primary" type="submit" value="Edit" />
        {{ form_end(edit_form) }}

        <div class="card mt-5 mb-5">
            <div class="card-header">
                Options
            </div>
            <div class="card-body">
                    {{ form_start(delete_form) }}
                        <input class="btn-primary" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                <i></i>
                <a href="{{ path('post_index') }}">Retour aux articles</a>
            </div>
        </div>
    </div>

{% endblock %}
